{
  "name": "esy-ninja",
  "version": "0.1.0",
  "description": "Ninja packaged for esy",
  "license": "MIT",
  "esy": {
    "buildsInSource": true,
    "exportedEnv": {
      "PATH": {
        "scope": "global",
        "val": "#{self.bin}:$PATH"
      },
      "PYTHONPATH": {
        "scope": "global",
        "val": "#{esy-python.lib / 'python3.7' / 'site-packages' : self.install / 'lib' / 'python3.7' / 'site-packages'}:$PYTHONPATH"
      }
    },
    "buildEnv": {
      "PYTHONPATH": "#{esy-python.lib / 'python3.7' / 'site-packages' : self.install / 'lib' / 'python3.7' / 'site-packages' }:$PYTHONPATH"
    },
    "build": [
      "python3 ./configure.py --bootstrap"
    ],
    "install": [
      "cp ./ninja #{self.bin}"
    ]
  },
  "dependencies": {
    "esy-python": "esy-packages/esy-python#53918f6447633d149ca59329474714c50bf729c4"
  }
}
